{
  "name": "@nihilvtt/frontend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Frontend for the NIHILVTT project",
  "scripts": {
    "dev": "vite",
    "test": "jest",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "dep-cruise:validate": "npx depcruise --validate .dependency-cruiser.cjs src",
    "dep-cruise:errors": "npx depcruise src -T err-long",
    "dep-cruise:circular": "npx depcruise src --max-depth 0",
    "dep-cruise:graph-json": "npx depcruise src -T json -f dependency-graph.json",
    "dep-cruise:graph-svg": "npx depcruise src -T dot | dot -T svg > dependency-graph.svg",
    "dep-cruise:report-html": "npx depcruise src -T html -f dependency-report.html",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "validate:data": "npx tsx src/tooling/validate.ts",
    "enums": "npx tsx src/tooling/generate-enums.ts",
    "monsters": "npx tsx src/tooling/generate-monsters.ts"
  },
  "dependencies": {
    "@floating-ui/react": "^0.27.13",
    "@hookform/resolvers": "^5.1.1",
    "@nihilvtt/datamodeling": "workspace:*",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.1.8",
    "axios": "^1.11.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.6",
    "immer": "^10.1.1",
    "lucide-react": "^0.542.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-draggable": "^4.5.0",
    "react-hook-form": "^7.60.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.6.3",
    "react-scroll": "^1.9.3",
    "scroll-into-view-if-needed": "^3.1.0",
    "sonner": "^2.0.6",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.10",
    "use-debounce": "^10.0.5",
    "uuid": "^11.1.0",
    "zod": "^4.0.5",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.10",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-scroll": "^1.8.10",
    "@typescript-eslint/eslint-plugin": "8.42.0",
    "@typescript-eslint/parser": "8.42.0",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "dependency-cruiser": "^16.10.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-testing-library": "^7.6.0",
    "globals": "^16.3.0",
    "jest": "^30.0.2",
    "jest-environment-jsdom": "^30.0.2",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "typescript-eslint": "8.42.0",
    "vite": "^6.3.5",
    "zod": "^4.0.8"
  }
}
